<h1 class="title">Edit</h1>


<%= form_with model: @book, local: true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>

<% end %>

<div class="book-actions">
<%= link_to "Show", book_path(@book.id)%>
<%= link_to "Back", books_path %>
</div>